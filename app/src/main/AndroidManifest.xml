<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.znuri.zuhdannur.smsgateaway">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconbengkela"
        android:label="Arda Motor"
        android:roundIcon="@drawable/iconbengkela"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SendActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activity.AddActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".Activity.DetailActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.AddSperpartActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Activity.ListOliActivity"
            android:parentActivityName=".MainActivity"
            ></activity>
    </application>

</manifest>